<div class="col-md-12">

    <% if @products.blank?%>
      <br>
      <h3 class="text-center">
        Opps! No products matched yet, please try again.
      </h3>
    <% else %>
      <h3 class="text-center" style="margin-top: 30px;">Total find <%= @products.count %> products</h3>
      <hr />
       <table class="table table-borderd">
       		<% @products.each do |product| %>
            <div class="pull-right">
                Submitted <%=time_ago_in_words(product.created_at) %> Ago
            </div>

          	<%= link_to(render_highlight_content(product,@query_string),product_path(product)) %>
          	<hr>
      		<% end %>
 		    </table>
      <div class="text-center">
        <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
      </div>
    <% end %>
  </div>
