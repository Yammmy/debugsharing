<h2> 经验列表 </h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增经验", new_admin_product_path, class: "btn btn-primary btn-sm") %>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th width="220">商品封面</th>
      <th>标题</th>
      <th>分类</th>
      <th>单价</th>
      <th width="100"> 操作选项</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.id %>
        </td>
        <td>
          <%= link_to product_path(product) do %>
            <% if product.photos.present? %>
              <%= image_tag(product.photos[1].avatar.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
        </td>
        <td>
          <%= product.title %>
        </td>
        <td>
          <%= product.category %>
        </td>
        <td>
          <%= product.price %>
        </td>
        <td>
          <%= link_to("修改", edit_admin_product_path(product)) %>
          <%= link_to("删除", admin_product_path(product), method: :delete) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
